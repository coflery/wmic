{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "MakeRX",
            "type": "shell",
            "command": "make",
            "args": [
                "rx",
                "-j4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                //"owner": "cpp",
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/rx"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "MakeTX",
            "type": "shell",
            "command": "make",
            "args": [
                "tx",
                "-j4"
            ],
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}/tx"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "MakeClean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}